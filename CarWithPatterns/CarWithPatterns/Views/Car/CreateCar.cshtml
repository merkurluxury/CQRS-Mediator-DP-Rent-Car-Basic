@model CarWithPatterns.CQRS.Commands.CreateCarCommand
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 10px;
        }

        .form-label {
            font-weight: bold;
        }

        .btn-custom {
            margin-top: 20px;
        }

        .form-check-label {
            display: inline-block;
            margin-right: 10px;
        }

        .form-check-input:checked + .form-check-label {
            color: white;
        }

            .form-check-input:checked + .form-check-label:before {
                content: '';
                position: absolute;
                left: 0;
                width: 50%;
                height: 100%;
                background-color: green;
                z-index: 1;
                border-radius: 25px;
                transition: left 0.3s ease-in-out;
            }

        .form-check-input + .form-check-label:before {
            content: '';
            position: absolute;
            right: 0;
            width: 50%;
            height: 100%;
            background-color: red;
            z-index: 1;
            border-radius: 25px;
            transition: left 0.3s ease-in-out;
        }

        .form-check-input:checked + .form-check-label:before {
            left: 50%;
        }
    </style>
    <title>Araba Ekle</title>
</head>

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow">
                    <div class="card-header border-0 bg-primary text-white">
                        <h3 class="mb-0">Araba Ekle</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                                <label for="CarBrand" class="form-label">Araç Marka</label>
                                <input type="text" id="CarBrand" asp-for="CarBrand" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label for="CarModel" class="form-label">Araç Model</label>
                                <input type="text" id="CarModel" asp-for="CarModel" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label for="MotorPower" class="form-label">Araç Motor Gücü</label>
                                <input type="text" id="MotorPower" asp-for="MotorPower" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label for="ImageUrl" class="form-label">Araç Resim Url</label>
                                <input type="text" id="ImageUrl" asp-for="ImageUrl" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label for="Price" class="form-label">Fiyat</label>
                                <input type="text" id="Price" asp-for="Price" class="form-control" />
                            </div>

                            <div class="mb-3 text-center">
                                <label class="form-check-label" for="IsAvailable">Müsaitlik Durumu</label>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="IsAvailable" id="IsAvailable">
                                    <label class="form-check-label" for="IsAvailable"></label>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary btn-custom">Aracı Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
