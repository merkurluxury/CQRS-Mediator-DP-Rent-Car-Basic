                @foreach (var item in Model)
{
    @if ((Model.IndexOf(item) + 1) % 3 == 1)
    {
        @:<div class="row">
    }

    <div class="col-md-4 mb-4">
        <div class="listing d-block align-items-stretch">
            <div class="listing-img h-100 mr-4">
                <img src="@item.ImageUrl" alt="Image" class="img-fluid">
            </div>
            <div class="listing-contents h-100">
                <h3>@item.CarModel</h3>
                <div class="rent-price">
                    <strong>@item.Price</strong><span class="mx-1">/</span>day
                </div>
                <div class="d-block d-md-flex mb-3 border-bottom pb-3">
                    <div class="listing-feature pr-4">
                        <span class="caption">Luggage:</span>
                        <span class="number">8</span>
                    </div>
                    <div class="listing-feature pr-4">
                        <span class="caption">Doors:</span>
                        <span class="number">4</span>
                    </div>
                    <div class="listing-feature pr-4">
                        <span class="caption">Motor Gücü:</span>
                        <span class="number">@item.MotorPower</span>
                    </div>
                </div>
                <div>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quos eos at eum, voluptatem quibusdam.</p>
                    <p><a href="#" class="btn btn-primary btn-sm rent-now-btn" data-id="@item.CarID" data-model="@item.CarModel" data-price="@item.Price">Detayları Görüntüle</a></p>
                </div>
            </div>
        </div>
    </div>

    @if ((Model.IndexOf(item) + 1) % 3 == 0 || Model.IndexOf(item) == Model.Count - 1)
    {
        @:</div>
    }
}

<!-- Pop-up Yapısı -->
<div id="rentPopup" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Araba Detayları</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong>Araba Markası:</strong> <span id="carBrand"></span></p>
                <p><strong>Araba Modeli:</strong> <span id="carModel"></span></p>
                <p><strong>Fiyat:</strong> <span id="carPrice"></span></p>
                <p><strong>Motor Gücü:</strong> <span name="MotorPower"></span></p>
                <p><strong> Günlük Fiyatı:</strong> <span id="price"></span></p>

                <!-- Diğer araba detayları burada yer alabilir -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-primary">Kirala</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.rent-now-btn').click(function () {
                var carModel = $(this).data('model');
                var carPrice = $(this).data('price');

                $('#carModel').text(carModel);
                $('#carPrice').text(carPrice);

                $('#rentPopup').modal('show');
            });
        });
    </script>
}
